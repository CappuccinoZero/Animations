<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RippleView">
        <attr name="color" format="color"/>
        <attr name="speed" format="integer"/>
        <attr name="density" format="dimension"/>
        <attr name="isFill" format="boolean"/>
        <attr name="isGradient" format="boolean"/>
        <attr name="gradient">
            <enum name="deep" value="0"/>
            <enum name="shallow" value="1"/>
        </attr>
        <attr name="locate">
            <enum name="leftTop" value="1"/>
            <enum name="top" value="2"/>
            <enum name="rightTop" value="3"/>
            <enum name="left" value="4"/>
            <enum name="center" value="5"/>
            <enum name="right" value="6"/>
            <enum name="leftBottom" value="7"/>
            <enum name="bottom" value="8"/>
            <enum name="rightBottom" value="9"/>
        </attr>
        <attr name="rateOfChange">
            <enum name="none" value="0"/>
            <enum name="slow" value="1"/>
            <enum name="normal" value="2"/>
            <enum name="high" value="3"/>
        </attr>
        <attr name="style">
            <enum name="in" value="1"/>
            <enum name="out" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="WaveView">
        <attr name="waveSpeed" format="integer"/>
        <attr name="backgroundTint" format="color"/>
        <attr name="firstColor" format="color"/>
        <attr name="secondColor" format="color"/>
        <attr name="randomWave" format="boolean"/>
        <attr name="waveWidth" format="dimension"/>
        <attr name="waveHeight" format="dimension"/>
        <attr name="parcent" format="float"/>
        <attr name="single" format="boolean"/>
        <attr name="container">
            <enum name="rect" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="heart" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="FlowRect">
        <attr name="rectHeight" format="dimension"/>
        <attr name="spaceX" format="dimension"/>
        <attr name="spaceY" format="dimension"/>
        <attr name="translationX" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="startColor" format="color"/>
        <attr name="centerColor" format="color"/>
        <attr name="endColor" format="color"/>
        <attr name="FlowSpeed" format="integer"/>
        <attr name="colorGradient" format="boolean"/>
        <attr name="flowRadius" format="integer"/>
    </declare-styleable>
    <declare-styleable name="NumberRain">
        <attr name="numberRain_spaceX" format="dimension"/>
        <attr name="numberRain_spaceY" format="dimension"/>
        <attr name="numberRain_textSize" format="dimension"/>
        <attr name="numberRain_minCount" format="integer"/>
        <attr name="numberRain_maxCount" format="integer"/>
        <attr name="numberRain_color" format="color"/>
        <attr name="numberRain_backgroundTint" format="color"/>
        <attr name="numberRain_minSpeed" format="integer"/>
        <attr name="numberRain_maxSpeed" format="integer"/>
        <attr name="numberRain_randomColor" format="boolean"/>
        <attr name="numberRain_delay" format="integer"/>
        <attr name="numberRain_style">
            <enum name="binary" value="2"/>
            <enum name="Decimal" value="10"/>
        </attr>
    </declare-styleable>
</resources>